
#include "stdafx.h"
#include <stdlib.h>
        int main() 
        {
            int i, num, j;
             printf("Digite um valor entre 2 e 20: \n");
            scanf("%d", &num);
             for (i=1; i<=num; i++) {
                for (j=1; j<=i; j++)
                    printf("%d", j);
                printf("\n");
            }
             for (i=i-2; j>0; j--) {
                for (j=1; j<=i; j++)
                    printf("%d", j);
                printf("\n");
            }
             printf("\n");
             system("pause");
            return 0;
}
