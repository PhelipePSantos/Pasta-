
#include <iostream>
#include <stdlib.h>
int numero()
{
	int numero;
	printf("Favor digitar um numero\n");
	scanf("%i", &numero);
	return numero;
}


int main(int argc, char** argv) 
{
	int a, i, neg=0;
	for (i=0; i<5; i++)
	{
		a = numero();
		if(a<0)
		{
			neg = neg+1;
		}
	}
	printf("%i numeros foram negativos\n", neg);
	 system("pause");

	return 0;

}
