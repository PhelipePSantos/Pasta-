#include <iostream>
#include <stdlib.h>
int main() 
{	
	int valor, maior=-999999999999999999999999999999999999999999, menor=999999999999999999999999999999999999999999999999, i;
	for(i=0; i<50; i++)
	{
		printf("Digite um valor\n");
		scanf("%i", &valor);
		if(valor>maior)
		{
			maior = valor;
		}
		if(valor<menor)
		{
			menor = valor;
		}
	}
	printf("O menor valor digitado eh : %i \n O maior valor digitado eh : %i", menor, maior);
	
	system("pause");
	return 0;

}
